<h2><%=@art_post.title%></h2>

<img src="<%=@art_post.img_url%>">

<p><%=@art_post.description%></p>
<p>$<%=@art_post.price%></p>
<% if  seller_logged_in? && current_seller == @art_post.seller %>
    <p><a href="/art_posts/<%=@art_post.id%>/edit"><input type="submit" value="Edit Art Post"</a></p>
    <form action="/art_posts/<%=@art_post.id%>" method="post">
        <input type="hidden" name="_method" value="delete">
        <p><input type="submit" value="Delete Art Post"></p>
    </form>
<% elsif current_buyer %>
    <form action="/buyers/save" method="post">
        <input type="submit" value="Save">
    </form>
<% end %>

<a href="/art_posts">View All Art Posts</a>